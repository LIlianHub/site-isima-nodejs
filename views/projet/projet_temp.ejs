        <div id="nav-mobile">
            <a href="index">
                <div class="nav-mobile-img">
                    <img src="icon/home.svg" alt="Retour à l'accueil" />
                </div>
                <div class="nav-mobile-txt">
                    <h3>Retour à l'accueil</h3>
                </div>
